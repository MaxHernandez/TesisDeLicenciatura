<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
	<LinearLayout 
    	android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent" 
    	>
    
		<TextView
	    	android:text="Registro"
	    	android:textStyle="bold"
	    	android:textSize="25sp"
	    	android:layout_marginTop="15dp"
	    	android:layout_marginLeft="25dp"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 	    
	    	/>
	
	    <LinearLayout
	    	android:orientation="vertical"
			android:layout_marginTop="15dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		>
			<TextView
			    android:id="@+id/signup_username_message"
	    		android:text=""
	    		android:visibility="gone"
	    		android:textSize="15sp"
	    		android:textStyle="bold"
	    		android:textColor="#FF0000"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
			<EditText
			    android:id="@+id/signup_username"
	    		android:hint="Nombre de usuario"
	    		android:inputType="text"
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content" 
	    		/>
		</LinearLayout>
		
	    <LinearLayout
	    	android:orientation="vertical"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		>
			<TextView
			    android:id="@+id/signup_password_message"
	    		android:text=""
	    		android:visibility="gone"
	    		android:textSize="15sp"
	    		android:textStyle="bold"
	    		android:textColor="#FF0000"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
    		<EditText
    		    android:id="@+id/signup_password"
	    		android:hint="Contraseña"
	    		android:inputType="textPassword"
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content" 
	    		/>
    	</LinearLayout>
    	
		<LinearLayout
	    	android:orientation="vertical"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		>
			<TextView
			    android:id="@+id/signup_password_confirmation_message"
	    		android:text=""
	    		android:visibility="gone"
	    		android:textSize="15sp"
	    		android:textStyle="bold"
	    		android:textColor="#FF0000"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
			<EditText
			    android:id="@+id/signup_password_confirmation"
	    		android:hint="Confirmar contraseña"
	    		android:inputType="textPassword"
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content" 
	    		/>
		</LinearLayout>
    
		<LinearLayout
	    	android:orientation="vertical"
			android:layout_marginTop="20dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		>
			<TextView
			    android:id="@+id/signup_first_name_message"
	    		android:text=""
				android:visibility="gone"
	    		android:textSize="15sp"
	    		android:textStyle="bold"
	    		android:textColor="#FF0000"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
			<TextView
			    android:id="@+id/signup_last_name_message"
	    		android:text=""
	    		android:visibility="gone"
	    		android:textSize="15sp"
	    		android:textStyle="bold"
	    		android:textColor="#FF0000"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
			<LinearLayout 
    			android:orientation="horizontal"
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content" 
    			>
    			<EditText
    			    android:id="@+id/signup_first_name"
	    			android:hint="Nombre"
	    			android:inputType="text"
	    			android:layout_weight="0.4"
    				android:layout_width="0dp"
    				android:layout_height="wrap_content" 
	    			/>
				<EditText
				    android:id="@+id/signup_last_name"
	    			android:hint="Apellido(s)"
	    			android:inputType="text"
					android:layout_weight="0.6"
    				android:layout_width="0dp"
    				android:layout_height="wrap_content" 
	    			/>
			</LinearLayout>
		</LinearLayout>
    
	    <LinearLayout
	    	android:orientation="vertical"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		>
			<TextView
			    android:id="@+id/signup_email_message"
	    		android:text=""
				android:visibility="gone"
	    		android:textSize="15sp"
	    		android:textStyle="bold"
	    		android:textColor="#FF0000"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
			<EditText
			    android:id="@+id/signup_email"
	    		android:hint="Correo"
	    		android:inputType="textEmailAddress"	    
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content" 
	    		/>
		</LinearLayout>
	
		<LinearLayout
	    	android:orientation="vertical"
			android:layout_marginTop="20dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		>
			<TextView
			    android:id="@+id/signup_gender_message"
	    		android:text=""
				android:visibility="gone"
	    		android:textSize="15sp"
	    		android:textStyle="bold"
	    		android:textColor="#FF0000"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
			<TextView
				android:text="Sexo:"
				android:textStyle="bold"
				android:textSize="18sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 	    
				/>
	
    		<RadioGroup
    		    android:id="@+id/signup_gender"
	    		android:layout_marginLeft="15dp"
	    		android:layout_marginRight="15dp"
	    		android:orientation="horizontal"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" 
        		>        
        		<RadioButton
					android:id="@+id/signup_gender_male"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:text="Masculino" 
            		android:checked="true" />
 
        		<RadioButton
            		android:id="@+id/signup_gender_female"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:text="Femenino" />
			</RadioGroup>
    	</LinearLayout>
    	
		<LinearLayout
	    	android:orientation="vertical"
			android:layout_marginTop="15dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		>
			<TextView
			    android:id="@+id/signup_birthday_message"
	    		android:text=""
				android:visibility="gone"
	    		android:textSize="15sp"
	    		android:textStyle="bold"
	    		android:textColor="#FF0000"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
			<TextView
				android:text="Fecha de nacimiento: "
				android:textStyle="bold"
				android:textSize="18sp"
	    		android:layout_marginTop="5dp"
	    		android:layout_marginLeft="15dp"
	    		android:layout_marginRight="15dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 	    
				/>
			<DatePicker
			    android:id="@+id/signup_birthday"
	   			android:layout_gravity="center"
	    		android:layout_marginLeft="15dp"
	    		android:layout_marginRight="15dp"
				android:layout_width="wrap_content"
				android:layout_height="48dp" 
	    		/>
		</LinearLayout>
	
	    <LinearLayout
	    	android:orientation="vertical"
			android:layout_marginTop="15dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		>
			<TextView
			    android:id="@+id/signup_send_text"
	    		android:text="El usuario ha sido registrado con éxito."
	    		android:visibility="gone"
	    		android:textSize="15sp"
	    		android:textStyle="bold"
	    		android:textColor="#44A044"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
			<ProgressBar
			    android:id="@+id/signup_send_progressbar"
				android:indeterminateBehavior="repeat"
				android:indeterminateOnly="true"
				android:visibility="gone"
				android:layout_gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>
			<Button
			    android:id="@+id/signup_send_button"
			    android:onClick="sendData"
    			style="@style/ButtonTheme"
    			android:textSize="15sp"
    			android:text="Enviar"
    			android:layout_gravity="center"
	    		android:layout_marginTop="20dp"
	    		android:layout_marginLeft="15dp"
	    		android:layout_marginRight="15dp"
    			android:layout_width="75dp"
    			android:layout_height="35dp"
			/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>