<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
	<LinearLayout 
    	android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	>
    
		<TextView
	    	android:text="@string/singup_title"
	    	android:textStyle="bold"
	    	android:textSize="25sp"
	    	android:layout_marginLeft="15dp"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 	    
	    	/>
	
	    <LinearLayout
	    	android:orientation="vertical"
			android:layout_marginTop="15dp"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		>
			<TextView
			    android:id="@+id/signup_username_message"
	    		android:visibility="gone"
	    		android:textSize="16sp"
	    		android:textStyle="bold"
	    		android:textColor="@color/signup_error_message"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
			<EditText
			    android:id="@+id/signup_username"
			    android:textSize="18sp"
	    		android:hint="@string/signup_username"
	    		android:inputType="text"
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content" 
	    		/>
		</LinearLayout>
		
	    <LinearLayout
	    	android:orientation="vertical"
			android:layout_marginTop="5dp"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		>
			<TextView
			    android:id="@+id/signup_password_message"
	    		android:visibility="gone"
	    		android:textSize="16sp"
	    		android:textStyle="bold"
	    		android:textColor="@color/signup_error_message"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
    		<EditText
    		    android:id="@+id/signup_password"
    		    android:textSize="18sp"
	    		android:hint="@string/signup_password"
	    		android:inputType="textPassword"
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content" 
	    		/>
    	</LinearLayout>
    	
		<LinearLayout
	    	android:orientation="vertical"
			android:layout_marginTop="5dp"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		>
			<TextView
			    android:id="@+id/signup_password_confirmation_message"
	    		android:visibility="gone"
	    		android:textSize="16sp"
	    		android:textStyle="bold"
	    		android:textColor="@color/signup_error_message"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
			<EditText
			    android:id="@+id/signup_password_confirmation"
			    android:textSize="18sp"
	    		android:hint="@string/signup_password_confirmation"
	    		android:inputType="textPassword"
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content" 
	    		/>
		</LinearLayout>
    
		<LinearLayout
	    	android:orientation="vertical"
			android:layout_marginTop="20dp"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		>
			<TextView
			    android:id="@+id/signup_first_name_message"
				android:visibility="gone"
	    		android:textSize="16sp"
	    		android:textStyle="bold"
	    		android:textColor="@color/signup_error_message"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
			<TextView
			    android:id="@+id/signup_last_name_message"
	    		android:visibility="gone"
	    		android:textSize="16sp"
	    		android:textStyle="bold"
	    		android:textColor="@color/signup_error_message"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
			<LinearLayout 
    			android:orientation="horizontal"
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content" 
    			>
    			<EditText
    			    android:id="@+id/signup_first_name"
    			    android:textSize="18sp"
	    			android:hint="@string/signup_first_name"
	    			android:inputType="text"
	    			android:layout_weight="0.4"
    				android:layout_width="0dp"
    				android:layout_height="wrap_content" 
	    			/>
				<EditText
				    android:id="@+id/signup_last_name"
				    android:textSize="18sp"
	    			android:hint="@string/signup_last_name"
	    			android:inputType="text"
					android:layout_weight="0.6"
    				android:layout_width="0dp"
    				android:layout_height="wrap_content" 
	    			/>
			</LinearLayout>
		</LinearLayout>
    
	    <LinearLayout
	    	android:orientation="vertical"
			android:layout_marginTop="5dp"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		>
			<TextView
			    android:id="@+id/signup_email_message"
	    		android:text=""
				android:visibility="gone"
	    		android:textSize="16sp"
	    		android:textStyle="bold"
	    		android:textColor="@color/signup_error_message"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
			<EditText
			    android:id="@+id/signup_email"
			    android:textSize="18sp"
	    		android:hint="@string/signup_email"
	    		android:inputType="textEmailAddress"	    
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content" 
	    		/>
		</LinearLayout>
	
		<LinearLayout
	    	android:orientation="vertical"
			android:layout_marginTop="20dp"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		>
			<TextView
			    android:id="@+id/signup_gender_message"
				android:visibility="gone"
	    		android:textSize="16sp"
	    		android:textStyle="bold"
	    		android:textColor="@color/signup_error_message"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
			<TextView
				android:text="@string/signup_gender"
				android:textStyle="bold"
				android:textSize="18sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 	    
				/>
	
    		<RadioGroup
    		    android:id="@+id/signup_gender"
	    		android:orientation="horizontal"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" 
        		>        
        		<RadioButton
					android:id="@+id/signup_gender_male"
					android:checked="true"
            		android:text="@string/signup_gender_male" 
            		android:textSize="18sp"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		/>
 
        		<RadioButton
            		android:id="@+id/signup_gender_female"
            		android:text="@string/signup_gender_female"
            		android:textSize="18sp"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		/>
			</RadioGroup>
    	</LinearLayout>
    	
		<LinearLayout
	    	android:orientation="vertical"
			android:layout_marginTop="5dp"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		>
			<TextView
			    android:id="@+id/signup_birthday_message"
				android:visibility="gone"
	    		android:textSize="16sp"
	    		android:textStyle="bold"
	    		android:textColor="@color/signup_error_message"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
			<TextView
				android:text="@string/signup_birthday"
				android:textStyle="bold"
				android:textSize="18sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 	    
				/>
			<DatePicker
			    android:id="@+id/signup_birthday"
			    android:calendarViewShown="false"
	   			android:layout_gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
	    		/>
		</LinearLayout>
	
	    <LinearLayout
	    	android:orientation="vertical"
	    	android:gravity="center"
			android:layout_marginTop="20dp"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		>
			<TextView
			    android:id="@+id/signup_send_text"
	    		android:visibility="gone"
	    		android:text="@string/signup_send_success"
	    		android:textSize="18sp"
	    		android:textStyle="bold"
	    		android:textColor="@color/signup_success_message"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	    
	    		/>
			<ProgressBar
			    android:id="@+id/signup_send_progressbar"
			    android:visibility="gone"
				android:indeterminateBehavior="repeat"
				android:indeterminateOnly="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>
			<Button
			    android:id="@+id/signup_send_button"
    			style="@style/ButtonTheme"
    			android:onClick="sendData"
    			android:text="@string/signup_send_button"
    			android:textSize="18sp"
    			android:layout_width="75dp"
    			android:layout_height="48dp"
			/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>