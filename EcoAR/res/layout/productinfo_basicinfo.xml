<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	>


<LinearLayout
    android:orientation="horizontal"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	>
		
	<ImageView
		android:id="@+id/productinfo_productimage"
		android:src="@drawable/ic_launcher"
		android:background="#000"
		android:layout_width="70dp"
		android:layout_height="70dp"
		/>
	
	<LinearLayout
	    android:layout_marginLeft="10dp"
	    android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
	    >
	
		<TextView
			android:id="@+id/productinfo_productname"
			android:text="Nombre del producto"
			android:textSize="18sp"
			android:textStyle="bold"
			android:gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			/>

		<TextView
			android:id="@+id/productinfo_productdescription"
			android:text="Descripcion del producto"
   			android:gravity="left"
    		android:maxLines="5"
    		android:lines="5"
    		android:layout_marginTop="5dp"
    		android:layout_height="fill_parent"
    		android:layout_width="wrap_content"
   	 		/>

	</LinearLayout>

</LinearLayout>

	<LinearLayout
	    android:orientation="horizontal"
	    android:gravity="center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
	    >

		<TextView
			android:id="@+id/productinfo_shopingservice"
			android:text="Amazon"
			android:textSize="12sp"
			android:textStyle="bold"
			android:gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			/> 
		<TextView
			android:text="-"
			android:textSize="12sp"
			android:textStyle="bold"
			android:gravity="center"
			android:layout_marginLeft="2.5dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			/> 
		<TextView
			android:id="@+id/productinfo_referenceurl"
			android:text="http://amazon.com/?p=10alklkoiuaosiduaoiudoaiusioa"
			android:textSize="8sp"
			android:maxLines="1"
			android:gravity="left"
			android:layout_marginLeft="2.5dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			/> 
		
	    
	</LinearLayout>
	    
</LinearLayout>
