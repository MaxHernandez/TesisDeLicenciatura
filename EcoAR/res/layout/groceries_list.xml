<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
	<LinearLayout 
    	android:background="@drawable/someproducts_item"
    	android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	>
<!--      
    	<TextView 
        	android:text="Lista del supermercado"
        	android:textSize="25sp"
			android:layout_width="match_parent"
        	android:layout_height="wrap_content" 
        	/>
        	-->
    
		<ListView
        	android:id="@android:id/list"
        	android:layout_marginTop="10dp"
        	android:layout_width="match_parent"
        	android:layout_height="0dip" 
        	android:layout_weight="1.0"
        	>
    	</ListView>    

		<LinearLayout 
	    	android:orientation="horizontal" 
	    	android:layout_marginTop="5dp"
			android:layout_width="match_parent"
        	android:layout_height="wrap_content" 
	    	>
	    	<Button
	    	    android:id="@+id/groseries_keepsearching"
	    	    android:onClick="keepSearching"
	        	android:text="Buscar"
				android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
	        	/>
	    	<Button
	    	    android:id="@+id/groseries_clear"
				android:text="Limpiar lista"
				android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:onClick="clearList"
	        	/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>