<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    
	<ListView
		android:id="@android:id/list"
		android:layout_width="match_parent"
		android:layout_height="0dp" 
		android:layout_weight="1.0"
		>
	</ListView>    

	<LinearLayout 
		android:orientation="horizontal"
		android:gravity="center" 
		android:layout_marginTop="5dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		>
		<Button
			android:id="@+id/groseries_keepsearching"
			android:onClick="keepSearching"
			style="@style/groceries_button"
			android:text="@string/groceries_list_keepsearching"
			android:textSize="18sp"
			android:padding="5dp"
			android:layout_width="wrap_content"
			android:layout_height="48dp" 
			/>
		<Button
			android:id="@+id/groseries_clear"
			android:onClick="clearList"
			style="@style/groceries_button"
			android:text="@string/groceries_list_clear"
			android:textSize="18sp"
			android:padding="5dp"
			android:layout_marginLeft="5dp"
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			/>
	</LinearLayout>
</LinearLayout>