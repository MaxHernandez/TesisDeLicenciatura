<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/someproducts_item"
    android:clickable="true"
    android:focusable="true"
	android:layout_width="match_parent"
	android:layout_height="72dp"
    >
    <LinearLayout
        android:id="@+id/searchbar_results_item_info"
    	android:orientation="horizontal"
    	android:gravity="center_vertical"
    	android:layout_toLeftOf="@+id/searchproduct_item_addshoppinglist"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
        >
        <ImageView 
    		android:id="@+id/searchproduct_item_image"
    		android:src="@drawable/ic_launcher"
			android:layout_width="52dp"
    		android:layout_height="52dp"
            />
        <LinearLayout
    		android:orientation="vertical"
    		android:gravity="center_vertical"
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
        	>
	    	<TextView
	        	android:id="@+id/searchproduct_itemname"
	        	android:text = "@string/searchbar_results_itemname"
	        	android:textSize="18sp"
	        	android:textStyle="bold"
	        	android:layout_marginLeft="10dp"
	        	android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	        	/>
			<TextView
	        	android:id="@+id/searchproduct_itemdescription"
	        	android:text = "@string/searchbar_results_itemdescription"
	        	android:textSize="14sp"
	        	android:textColor="#888"
	        	android:layout_marginLeft="10dp"
	        	android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	        	/>
	    </LinearLayout>
    </LinearLayout>
	<Button
		android:id="@+id/searchproduct_item_addshoppinglist"
		android:background="@drawable/addtoshoppinglist"
		android:layout_centerVertical="true" 
		android:layout_alignParentRight="true"
		android:layout_marginRight="5dp"
		android:layout_marginLeft="5dp"
		android:layout_width="30dp"
		android:layout_height="30dp" 
		/>
</RelativeLayout>
