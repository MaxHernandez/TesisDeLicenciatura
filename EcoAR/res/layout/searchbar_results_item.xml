<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/someproducts_item"
    android:clickable="true"
    android:focusable="true"
	android:layout_width="match_parent"
	android:layout_height="48dp"
    >
    <LinearLayout
        android:id="@+id/searchbar_results_item_info"
    	android:orientation="horizontal"
    	android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/searchbar_results_item_rightmenu"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        >
        <ImageView 
    		android:id="@+id/searchproduct_item_image"
    		android:src="@drawable/ic_launcher"
           	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
            />
	    <TextView
	        android:id="@+id/searchproduct_itemname"
	        android:text = "@string/searchbar_results_itemname"
	        android:textSize="20sp"
	        android:textStyle="bold"
	        android:layout_marginLeft="10dp"
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
	        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/searchbar_results_item_rightmenu"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
   	 	>
	    <Button
	        android:id="@+id/searchproduct_item_addshoppinglist"
        	android:background="@drawable/addtoshoppinglist"
        	android:layout_marginRight="15dp"
        	android:layout_width="30dp"
        	android:layout_height="30dp" 
        	/>
    	<ImageView
        	android:src="@drawable/arrow"
        	android:layout_width="wrap_content"
    		android:layout_height="match_parent" 
        	/>
    </LinearLayout>
</RelativeLayout>
