<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	>
	<TextView
		android:text="Calificación ambiental"
		android:textSize="18sp"
		android:textStyle="bold"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		/>

	<TextView
		android:text="Escala del 1 al 10 (El más ecológico tiene un 10)"
		android:textColor="#555"
		android:layout_marginTop="5dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		/>
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>
		<RelativeLayout
			android:background="@drawable/circlescale"
			android:layout_marginTop="20dp"
			android:layout_centerHorizontal="true"
			android:layout_width="130dp"
			android:layout_height="130dp"
			>
				<TextView
					android:id="@+id/productinfo_productqualification"
					android:text="8.1"
					android:textSize="50sp"
					android:textStyle="bold"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					/>
		</RelativeLayout>
	</RelativeLayout>
    
    <LinearLayout 
        android:layout_marginTop="20dp"
        android:orientation="vertical"
		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
        >
    	<TextView
    		android:text="Criterios de analisis"
			android:textSize="16sp"
			android:textStyle="bold"
			android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		/>
		<LinearLayout 
        	android:layout_marginTop="5dp"
        	android:paddingLeft="15dp"
			android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
        	>
			<ImageView
				android:id="@+id/productinfo_transport"				    
				android:src="@drawable/transport"
				android:layout_width="20dp"
				android:layout_height="20dp"
				/>
			<TextView
				android:text="Gastos de transportación"
				android:textSize="16sp"
				android:layout_marginLeft="5dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>
			<ImageView
				android:layout_marginLeft="15dp"
				android:layout_width="20dp"
				android:layout_height="20dp"
				/>
		</LinearLayout>
		<LinearLayout 
			android:layout_marginTop="5dp"
			android:paddingLeft="15dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
			<ImageView
				android:id="@+id/productinfo_energy"	
				android:src="@drawable/energy"
				android:layout_width="20dp"
				android:layout_height="20dp"
				/>
			<TextView
				android:text="Ahorro de energía"
				android:textSize="16sp"
				android:layout_marginLeft="5dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>
			<ImageView
				android:layout_marginLeft="15dp"
				android:layout_width="20dp"
				android:layout_height="20dp"
				/>
		</LinearLayout>
		<LinearLayout 
			android:layout_marginTop="5dp"
			android:paddingLeft="15dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
			<ImageView
				android:id="@+id/productinfo_water"	
				android:src="@drawable/water"
				android:layout_width="20dp"
				android:layout_height="20dp"
				/>
			<TextView
				android:text="Ahorro de agua"
				android:textSize="16sp"
				android:layout_marginLeft="5dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>
			<ImageView
				android:layout_marginLeft="15dp"
				android:layout_width="20dp"
				android:layout_height="20dp"
				/>
		</LinearLayout>
		<LinearLayout 
			android:layout_marginTop="5dp"
			android:paddingLeft="15dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
			<ImageView
				android:id="@+id/productinfo_society"	
				android:src="@drawable/society"
				android:layout_width="20dp"
				android:layout_height="20dp"
				/>
			<TextView
				android:text="Ayuda en la sociedad"
				android:textSize="16sp"
				android:layout_marginLeft="5dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>
			<ImageView
				android:layout_marginLeft="15dp"
				android:layout_width="20dp"
				android:layout_height="20dp"
				/>
		</LinearLayout>
		<LinearLayout 
			android:layout_marginTop="5dp"
			android:paddingLeft="15dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
			<ImageView
				android:id="@+id/productinfo_recyclable"	
				android:src="@drawable/recyclable"
				android:layout_width="20dp"
				android:layout_height="20dp"
				/>
			<TextView
				android:text="Es un producto recicable"
				android:textSize="16sp"
				android:layout_marginLeft="5dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>
			<ImageView
				android:layout_marginLeft="15dp"
				android:layout_width="20dp"
				android:layout_height="20dp"
				/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
