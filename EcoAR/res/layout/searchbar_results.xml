<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
	<RelativeLayout
		android:gravity="center_horizontal"
		android:layout_width="match_parent"
		android:layout_height="48dp" 
		>    
		<EditText
			android:id="@+id/searchproduct_searchTextBar"
			android:inputType="text"
			android:textSize="16sp"
			android:hint="@string/searchproduct_searchtextbar_hint"
			android:layout_toLeftOf="@+id/searchproduct_searchButton"
			android:layout_alignParentLeft="true"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			/>
	    <Button
			android:id="@+id/searchproduct_searchButton"
			style="@style/ButtonTheme"
			android:text="@string/searchbar_sendbutton"
			android:textSize="16sp"
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			/>
	</RelativeLayout>
    
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >
    </ListView>    
</LinearLayout>