<?xml version="1.0" encoding="utf-8"?>

<!-- Este view sirve como pattern de cada item que se agregue a la lista de someproducts en el home -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/someproducts_item"
    android:clickable="true"
    android:focusable="true"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    >
    
    <LinearLayout
        android:id="@+id/someproducts_itemsocket"
    	android:orientation="horizontal"
    	android:gravity="center_vertical"
    	android:padding="0dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
        >
        <ImageView 
            android:src="@drawable/ic_launcher"
            android:background="#000000"
            android:layout_marginLeft="5dp"
			android:layout_width="52dp"
    		android:layout_height="52dp"
            />
	    <TextView
	        android:id="@+id/someproducts_name"
	        android:text = "Nombre del producto"
	       	android:textSize="16sp"
	        android:textStyle="bold"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="0dp"
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
	        />
    </LinearLayout>
	<CheckBox
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"    
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		/>
</RelativeLayout>
