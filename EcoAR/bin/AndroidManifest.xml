<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maxkalavera.ecoar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <!-- Accessing camera hardware -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.maxkalavera.ecoar.home.Home"
            android:theme="@style/Theme.mainTheme"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.maxkalavera.ecoar.login.Login"
            android:label="@string/app_name" >
            >
        </activity>
        
        <activity
            android:name="com.maxkalavera.ecoar.main.Main"
            android:label="@string/app_name" >
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.maxkalavera.ecoar.ShowProductInfo"
            android:label="@string/app_name" >
            >
        </activity>
        
        <activity
            android:name="com.maxkalavera.ecoar.searchbar.SearchBar"
            android:label="@string/app_name" >
            >
        </activity>
        
        <activity
            android:name="com.maxkalavera.ecoar.SearchProductCamera"
            android:label="@string/app_name" >
            >
        </activity>
        
    </application>

</manifest>
